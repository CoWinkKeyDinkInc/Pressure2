"resource/layout/downloadspage.layout" {
	colors {
		ListPanel.PostSectionLeading = "12"
	}

	styles {
		DownloadsPageStyle {
			bgcolor=none

			render {}			
		}

		ListPanelStyle {
			bgcolor=custombackgroundprimary
			selectedbgcolor=blue500
			textcolor=secondaryText_onDarkBG
			selectedtextcolor=white
			shadowtextcolor=disabled_onDarkBG
			font-family=basefont
			font-size=14
			font-size=15 [$OSX]
			font-weight=400
			
			render {
				0="image_tiled( x0, y0, x1, y0 + 4, graphics/material/shadows/top )"
			}
			render_bg {}
		}	

		SectionedListPanelCollapser {
			inset="0 0 0 0"
			padding-left=8
			padding-right=8
			image=graphics/icons/dropdown/padder
			bgcolor=grey800

			render {}
			render_bg {
				0="fill(x0,y0-1,x1+2,y0, dividers_onDarkBGG)"
				1="fill(x0,y1-1,x1+2,y1, dividers_onDarkBG)"
				2="image(x0+14,y0+6,x1,y1, graphics/icons/dropdown/standard/down_dark)"
			}
		}

			SectionedListPanelCollapser:hover {
				render_bg {
					0="fill(x0,y0-1,x1+2,y0, dividers_onDarkBG)"
					1="fill(x0,y1-1,x1+2,y1, dividers_onDarkBG)"
					2="image(x0+14,y0+6,x1,y1, graphics/icons/dropdown/hover/down_dark)"
				}
			}

			SectionedListPanelCollapser:selected {
				render_bg {
					0="fill(x0,y0-1,x1+2,y0, dividers_onDarkBG)"
					1="fill(x0,y1-1,x1+2,y1, dividers_onDarkBG)"
					2="image(x0+14,y0+6,x1,y1, graphics/icons/dropdown/standard/up_dark)"
				}
			}

				SectionedListPanelCollapser:selected:hover {
					render_bg {
						0="fill(x0,y0-1,x1+2,y0, dividers_onDarkBG)"
						1="fill(x0,y1-1,x1+2,y1, dividers_onDarkBG)"
						2="image(x0+14,y0+6,x1,y1, graphics/icons/dropdown/hover/up_dark)"
					}
				}

		SectionHeaderStyle {
			bgcolor=grey800

			render {
				0="fill(x0-7,y0+1,x0,y1-1, grey800)"
			}
			render_bg {
				0="fill(x0,y0+1,x0-10,y1-1, grey800)"
				1="fill(x0,y0-1,x1,y0, dividers_onDarkBG)"
				2="fill(x0,y1-1,x1,y1, dividers_onDarkBG)"
			}
		}

		SectionHeaderStyleLabel {
			bgcolor=none
			textcolor=white
			font-weight=600
			font-style=uppercase
			inset="0 0 0 0"
			padding-top=3
		}
	}

	layout {
		place {
			control=downloadsummarypanel,panel_list
			dir=down
			width=max
			height=max
			margin-right=-1
			margin-bottom=-1
			spacing=0
		}
	}
}